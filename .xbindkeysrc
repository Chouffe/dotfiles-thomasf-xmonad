# -*- shell-script -*-

# -------------------------
# Help

"xbindkeys_show"
  mod4 + control + F1

# -------------------------
# Application launchers

"appmenu"
  mod4 + p

"xfce4-appfinder"
  mod4 + control + shift + p

"gmrun"
  mod4 + control + alt + shift + p

# -------------------------
# Open terminal

"term"
  mod4 + control + Return

"term o"
  mod4 + alt + Return

"sshmenu"
  mod4 + s

# -------------------------
# Window management

"xkill"
  mod4 + shift + control + c

# -------------------------
# Screenshooting

"xfce4-screenshooter"
  mod4 + Print

"scrot screenshot-%Y-%m-%d_%h-%m-%s_$wx$h.png' -e 'mv $f ~/Pictures/scrot/'"
  mod4 + Alt_L + Print
