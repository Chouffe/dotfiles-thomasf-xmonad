			"--normal","green",
			"--high","purple"
			] 10
                    , Run Cpu [
			"-t","c:<total>",
			"-L","15","-H","50",
			"--normal","green",
			"--high","purple"
			] 10
                    , Run Memory [
			"-t","u:<used>M c:<cache>M"
			] 10
                    , Run Swap [
			"-t","s:<usedratio>"
			] 10
                    , Run Date 
			"%a %b %_d %Y %H:%M" "date"
			10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %swap% | %wlan0% | %date%"
       }
