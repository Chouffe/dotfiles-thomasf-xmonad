#!/bin/bash
#
# Nautilus wrapper
#

nargs="--new-window --no-default-window --no-desktop"

if [ $# -eq 0 ]; then

    source ~/.config-base/bash/common
    source "${__BASH}/z"

    if [ $(which wsname) ]; then
        name="$(wsname -p)"
        case $name in
            home|temp|chat|nodes|mail|dash|NSP)
                cd ${HOME}
                ;;
            emacs)
                cd ~/.emacs.d
                ;;
            www|share)
                cd ~/Downloads
                ;;
            *)
                _z "${HOME}" "${name/-/ }"
                ;;
        esac
    fi
    exec /usr/bin/nautilus $nargs .
else
    exec /usr/bin/nautilus $nargs "$@"

fi
