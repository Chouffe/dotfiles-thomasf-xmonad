#!/bin/bash
#
# Dmenu launch wrapper
#
# Author: Thomas Fr√∂ssman  ( thomasf@jossystem.se / http://thomas.jossystem.se )
# Updates to this file will probably be available at https://github.com/thomasf/dotfiles/
#

set -e

tr=urxvt

if [ `which yeganesh` ]; then
    prompt="yeganesh -x"
else
    prompt="dmenu_path | dmenu -i"
fi

cmd=$(${prompt})

case $cmd in
    alsamixer|htop|irssi|weechat-curses|ncmpcpp)
        exec $tr -name $cmd -e $cmd
        ;;
    wireshark|synaptic|zenmap|firestarter|reboot)
        exec gksudo $cmd
        ;;
    shutdown)
        exec gksudo "shutdown now -h"
        ;;
    *)
        exec $cmd
        ;;
esac
