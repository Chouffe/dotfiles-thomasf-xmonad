#!/bin/bash
#
# Dmenu/rofi wrapper, changed colors
#
# Author: Thomas Fr√∂ssman  ( thomasf@jossystem.se / http://thomas.jossystem.se )


if [ -e ~/.config/darkmode ]; then
  bg="#002b36"
  fg="#839496"
  border="#284b54"
else
  bg="#fdf6e3"
  fg="#657b83"
  border="#cccec4"
fi
color="#b58900"

if [ -x ${HOME}/bin/rofi ]; then
  cmd="${HOME}/bin/rofi"
  type=rofi
elif [ -x /usr/bin/rofi ]; then
  cmd=rofi
  type=rofi
elif [ -x /usr/bin/dmenu ]; then
  cmd=/usr/bin/dmenu
  type=dmenu
elif [ -x /usr/local/bin/dmenu ]; then
  type=dmenu
  cmd=/usr/local/bin/dmenu
fi

case "${type}" in
  rofi)
    if [[ -z $PLACEMENT ]]; then
      ROOFI_ARGS="-lines 25 -width 50"
    else
      IFS='x' read -r -a place <<< "$PLACEMENT"
      ROOFI_ARGS="-m 1 -location 1 -xoffset ${place[0]} -yoffset ${place[1]} -width ${place[2]} -height ${place[3]}"
    fi
    exec $cmd \
         -bg "${bg}" -fg "${fg}" -hlfg "${bg}" -hlbg "${color}" \
         -bc "${border}" \
         -bw 4 \
         -hide-scrollbar \
         -font "PragmataPro 11" \
         ${ROOFI_ARGS} \
         -dmenu -i "$@"
    ;;
  dmenu)
    exec $cmd \
         -nb "${bg}" -nf "${fg}" -sf "${bg}" -sb "${color}" \
         -i "$@"
    ;;
  *)
    xmessage "dmenu/rofi not found"
    exit 1
    ;;
esac


# Local Variables:
# eval: (rainbow-mode 1)
# End:
