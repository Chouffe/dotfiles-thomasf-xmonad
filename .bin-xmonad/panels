#!/bin/sh

if [ $(which xmobar) ]; then
    pkill xmobar
    xmobar ~/.config-xmonad/xmobar/dark-top-x0 -x 0 &
    xmobar ~/.config-xmonad/xmobar/dark-top -x 1 &
    xmobar ~/.config-xmonad/xmobar/dark-bottom -x 0 &
    xmobar ~/.config-xmonad/xmobar/dark-bottom -x 1 &
fi

if [ $(which trayer) ]; then
    pkill trayer
    trayer --edge top --align right --widthtype percent --width 10 --height 18 --tint 0x002b36 --alpha 0 --transparent true &
fi
