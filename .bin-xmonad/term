#!/bin/bash
#
# Launch terminals
#
# Author: Thomas Fr√∂ssman  ( thomasf@jossystem.se / http://thomas.jossystem.se )
#
#

set -e

cmd=${1}
case $cmd in
    l|light)
        shift 1
        exec urxvt -name LURxvt "$@"
        ;;
    d|dark)
        shift 1
        exec urxvt "$@"
        ;;
    o|other)
        shift 1
        if [ -e ~/.config/darkmode ]; then
            exec urxvt -name LURxvt "$@"
        else
            exec urxvt "$@"
        fi
        ;;
    *)
        if [ -e ~/.config/darkmode ]; then
            exec urxvt "$@"
        else
            exec urxvt -name LURxvt "$@"
        fi
        ;;
esac
