#!/bin/bash

[ $(which wmctrl) ] || exit 1
name=$(wmctrl -d 2> /dev/null | grep  "[0-9]* \*" | tr -s ' '  | cut -d ' ' -f 10-)

[[ -z $name ]] \
    && name=$(wmctrl -d 2> /dev/null | grep  "[0-9]* \*" | tr -s ' '  | cut -d ' ' -f 9-)

[[ -z $name ]] && exit 1

case $1 in
    -p)
        echo -n $(echo $name | cut -d '.' -f -1)
        ;;
    -s)
        echo -n $(echo $name | cut -d '.' -f 2-)
        ;;
    *)
        echo -n $name
        ;;
esac
