set -e

# zenity --info --no-wrap --text="$(nmcli -t -f name,devices con status)"

uuid=`nmcli -e yes -m tabular -t -f uuid,name con list | dmenu -i -l 15 | cut -d: -f1`

gksudo nmcli con up uuid $uuid
