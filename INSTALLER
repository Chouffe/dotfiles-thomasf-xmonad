#!bash
#
# This file might be sourced during installation with hsadmin
#

[ -e "${HOME}/.config/dunst/dunstrc" ] \
    || mkdir -p "${HOME}/.config/dunst/" && ln -fs "$(pwd)/.config-xmonad/dunstrc" "${HOME}/.config/dunst/"

[ -e "${HOME}/.config/gtk-3.0" ] \
    || ln -fs "$(pwd)/.config-xmonad/gtk/gtk-3.0" "${HOME}/.config/"

[ -e "${HOME}/.themes" ] \
    || ln -fs "$(pwd)/.config-xmonad/gtk/themes" "${HOME}/.themes"

[ -e "${HOME}/.config/fontconfig/conf.d" ] \
    || mkdir -p "${HOME}/.config/fontconfig/" && ln -fs "$(pwd)/.config-xmonad/fontconfig.d" "${HOME}/.config/fontconfig/conf.d"

[ -e "${HOME}/.fonts.conf.d" ] \
    || mkdir -p "${HOME}/.config/fontconfig/" && ln -fs "$(pwd)/.config-xmonad/fontconfig.d" "${HOME}/.fonts.conf.d"
